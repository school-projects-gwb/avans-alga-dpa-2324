<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BroadwayBB.Presentation.MainWindow"
        Title="BroadwayBB.Presentation">
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
    <Button Width="NaN" Content="Select Grid file (.txt or .xml)" Click="SelectGrid_Click"/>
    <Button Width="NaN" Content="Select Artists file (.csv)" Click="SelectArtists_Click"/>
    <Button Width="NaN" Content="Show Simulation" Click="ShowSimulation_Click"/>
  </StackPanel>
</Window>
