<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BroadwayBB.Presentation.MainWindow"
        Title="Broadway Boogie Woogie - Museum laden">
  
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="75">
      <Button VerticalAlignment="Center" Content="Select Grid file (.xml)" Click="SelectGrid_Click"/>
      <TextBlock VerticalAlignment="Center"  Height="25"> or </TextBlock>
      <TextBox VerticalAlignment="Center" Height="25" Watermark="URL to Grid file" />
    </StackPanel>
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="75">
      <Button HorizontalAlignment="Center" Content="Select Artists file (.csv)" Click="SelectArtists_Click"/>
      <TextBlock VerticalAlignment="Center"  Height="25"> or </TextBlock>
      <TextBox VerticalAlignment="Center" Height="25" Watermark="URL to Artists file" />
    </StackPanel>
    
    <Button HorizontalAlignment="Center" Name="StartSimulation" Content="Show Simulation" Click="ShowSimulation_Click"/>
  </StackPanel>
</Window>
